name: Build APK

on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up JDK 17
        uses: actions/setup-java@v4
        with:
          distribution: temurin
          java-version: 17

      - name: Cache Gradle packages
        uses: actions/cache@v4
        with:
          path: |
            ~/.gradle/caches
            ~/.gradle/wrapper
          key: gradle-${{ hashFiles('**/*.gradle*', '**/gradle-wrapper.properties') }}
          restore-keys: gradle-

      - name: Build Debug APK
        run: ./gradlew assembleDebug

      - name: Find and Upload APKs
        run: |
          echo "Buscando APKs generados..."
          APK_FILES=$(find $GITHUB_WORKSPACE -type f -name "*.apk" || true)
          if [ -z "$APK_FILES" ]; then
            echo "⚠️ No se encontraron archivos .apk"
            exit 1
          fi
          echo "✅ APKs encontrados:"
          echo "$APK_FILES"
          for apk in $APK_FILES; do
            echo "Subiendo: $apk"
            artifact_name=$(basename "$apk" .apk)
            gh run upload-artifact "$artifact_name" "$apk"
          done
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
